
{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ name }}</h1>

{# Cette variable est de type string donc on peut l'afficher directement #}
    <p>Ecris par {{ auteur }}</p>
{# Article est un objet issu de la class std donc pour acc√®der a sa props.... #}
    <h2> {{ article.title }} </h2>

    <p> {{ article.intro }} </p>

    <p>{{ article.content }}</p>
{# User pareil objet donc objet.proprieteName  #}
    <h3>  {{ user.name }}  </h3>

    <p> {{ user.age }}  </p>
{# Ici de type string donc tout simplement le nom de la variable donner dans la vue ! #}
    <p> {{ jeanDaniel }} </p>

</div>
{% endblock %}